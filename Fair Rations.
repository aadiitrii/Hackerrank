#include <stdio.h>

char* fairRations(int B[], int n) {
    int loaves = 0;
    for (int i = 0; i < n - 1; i++) {
        if (B[i] % 2 != 0) {
            B[i]++;
            B[i + 1]++;
            loaves += 2;
        }
    }
    if (B[n - 1] % 2 != 0) {
        return "NO";
    }

    static char result[12];
    sprintf(result, "%d", loaves);
    return result;
}

int main() {
    int n;
    scanf("%d", &n);
    int B[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &B[i]);
    }

    printf("%s\n", fairRations(B, n));
    return 0;
}
